<div class="container">
	<div class="row">
		<div class="col">
			<h1 class="align-middle">Admin de Artículos</h1>
		</div>
	</div>

	<div class="row">
		<div class="col border p-1 m-1">
			<form class="d-flex flex-column m-auto g-2" id="abmForm">
				<div class="mb-2">
					<label for="title" class="form-label">Nombre</label>
					<input
						type="text"
						class="form-control"
						id="title"
						name="title"
						required
					/>
					<div id="nameHelp" class="form-text">Nombre del Artículo</div>
				</div>

				<div class="mb-2">
					<label for="description" class="form-label">Descripción</label>
					<input
						type="text"
						class="form-control"
						id="description"
						name="description"
						required
					/>
					<div id="descriptionHelp" class="form-text">Descripción breve del
						artículo</div>
				</div>

				<div class="mb-2">
					<label for="code" class="form-label">Código</label>
					<input type="text" class="form-control" id="code" name="code" />
					<div id="codeHelp" class="form-text">Código del fabricante</div>
				</div>

				<div class="mb-2">
					<label for="price" class="form-label">Precio</label>
					<input
						type="number"
						class="form-control"
						id="price"
						min="1"
						name="price"
						required
					/>
					<div id="priceHelp" class="form-text">Precio sin simbolo $</div>
				</div>

				<div class="mb-2">
					<label for="status" class="form-label">Activo? </label>
					<input
						type="checkbox"
						id="status"
						value="true"
						name="status"
						checked
					/>
					<div id="statusHelp" class="form-text">Marcar si el producto está
						activo</div>
				</div>

				<div class="mb-2">
					<label for="stock" class="form-label">Stock</label>
					<input
						type="number"
						pattern="^[0-9]+"
						step="1"
						class="form-control"
						id="stock"
						name="stock"
						required
					/>
					<div id="stockHelp" class="form-text">Código del fabricante</div>
				</div>

				<div class="mb-2">
					<label for="category" class="form-label">Categoría</label>
					<input
						type="text"
						class="form-control"
						id="category"
						name="category"
						required
					/>
					<div id="categoryHelp" class="form-text">Familia de articulos a la que
						pertenece</div>
				</div>

				<button
					type="submit"
					class="btn btn-primary"
					id="addBtn"
				>Agregar</button>
				<br />
				<button
					type="button"
					class="btn btn-primary"
					id="clearBtn"
				>Limpiar</button>
			</form>
		</div>
		<div class="col border p-1 m-1">
			<h2> Articulos en la tienda...</h2>
			<div class="mt-3">
				<ul class="list-group p-2 gap-3" id="productsList">

				</ul>
			</div>
		</div>
	</div>

</div>

